<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="?android:attr/colorBackground"
        app:paddingTopFitsWindowInsets="true"
        app:paddingBottomFitsWindowInsets="true">
        <Button
            android:text="Open page in the MAIN stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:MvxBind="Click GoToOuterPageCommand"/>
        <Button
            android:text="Open new TABBED ROOT page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:MvxBind="Click GoToTabsCommand"/>
    </LinearLayout>
</FrameLayout>